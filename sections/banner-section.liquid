<section class="banner-section">
  <h2 class="banner-section__heading" style="color: {{ section.settings.heading_color }}">
    {{ section.settings.heading }}
  </h2>
  <p class="banner-section__description" style="color: {{ section.settings.description_color }}">
    {{ section.settings.description }}
  </p>
  <a class="banner-section__link" href="{{ section.settings.button_link }}">{{ section.settings.button_text }}</a>
  {% if section.banner_image %}
    <img src="{{ section.settings.banner_image | asset_url }}" width="120px" height="120px">
  {% else %}
    <img src="{{ 'default_image.jpg' | asset_url }}" width="120px" height="120px">
  {% endif %}
</section>

{% schema %}
{
  "name": "Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Heading Text"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Description Text"
    },
    {
        "type": "color",
        "id": "description_color",
        "label": "Description Color"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button URL",
      "default": "/collections/all"
    },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner"
    }
  ]
}
{% endschema %}
